{
  "name": "@mediamonks/react-hooks",
  "version": "1.0.0-alpha.1",
  "description": "A collection of React hooks we use at Media.Monks",
  "keywords": [
    "react",
    "hooks"
  ],
  "repository": "git@github.com:mediamonks/react-hooks.git",
  "author": "frontend.monks",
  "license": "MIT",
  "module": "./dist/index.js",
  "exports": {
    "import": "./dist/index.js"
  },
  "type": "module",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm-run-all -s clean build:*",
    "build:ts": "tsc -p ./tsconfig.build.json",
    "clean": "npm-run-all clean:*",
    "clean:test": "shx rm -rf coverage .nyc_output",
    "clean:npm": "shx rm -rf dist",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest ./src/",
    "check-types": "tsc --project tsconfig.json --noEmit --noUnusedLocals",
    "storybook": "sb dev -p 6006",
    "storybook:build": "sb build -o ./.docs/dist",
    "storybook:deploy": "./deploy-docs.sh",
    "prepublishOnly": "npm run build",
    "plop": "plop"
  },
  "prettier": "@mediamonks/prettier-config",
  "eslintConfig": {
    "extends": [
      "@mediamonks/eslint-config",
      "@mediamonks/eslint-config-typescript"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "checkShorthandImports": false,
          "allowList": { "fn": true },
          "replacements": {
            "ref": false,
            "refs": false,
            "params": false,
            "param": false,
            "props": false,
            "prop": false
          }
        }
      ]
    }
  },
  "devDependencies": {
    "@mediamonks/eslint-config": "^2.0.6",
    "@mediamonks/eslint-config-typescript": "^1.0.8",
    "@mediamonks/prettier-config": "^1.0.1",
    "@storybook/addon-docs": "^7.0.0-alpha.54",
    "@storybook/builder-vite": "^7.0.0-alpha.54",
    "@storybook/cli": "^7.0.0-alpha.54",
    "@storybook/react": "^7.0.0-alpha.54",
    "@storybook/react-vite": "^7.0.0-alpha.54",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.3",
    "@types/react": "^18.0.25",
    "eslint": "^8.28.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "npm-run-all": "^4.1.5",
    "plop": "^3.1.1",
    "prettier": "^2.8.0",
    "react": "^18.2.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "peerDependencies": {
    "react": ">= 17"
  },
  "dependencies": {
    "@psimk/typed-object": "^1.0.4",
    "@types/lodash-es": "^4.17.6",
    "lodash-es": "^4.17.21"
  }
}
